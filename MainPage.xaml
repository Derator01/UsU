<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsU.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0">
            <Label x:Name="VictoryMessage"/>
            <Label x:Name="WordLbl"/>
            <Entry TextChanged="OnTextChanged" Completed="OnCompleted" Placeholder="Enter word" x:Name="InputBox" MaxLength="24" />
            <Button Text="Enter" Clicked="OnEnterBtn" x:Name="EnterBtn" />
            <HorizontalStackLayout>
                <Button Text="Skip" Clicked="OnSkipBtn" x:Name="SkipBtn"/>
                <Button Text="Hint" Clicked="OnHintBtn" x:Name="HintBtn"/>
                <Label Text="0" x:Name="ScoreLbl"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
